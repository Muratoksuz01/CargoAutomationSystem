@{
    ViewData["Title"] = "Bireysel Giriş";
}
@section navbar {
    @await Html.PartialAsync("_navbar")
}
@model LoginViewModel


@if (ViewBag.IsSuccess != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        @ViewBag.IsSuccess
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<h2>Bireysel Giriş</h2>

<form asp-action="Login" asp-controller="Home" method="post">
    <div class="form-group">
        <label asp-for="Email"></label>
        <input class="form-control" asp-for="Email" placeholder="Email adresinizi girin" value="user1@example.com" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input class="form-control" asp-for="Password" placeholder="Şifrenizi girin" value="password1" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Giriş Yap</button>

    <div class="mt-3">
        <p>Hesabınız yok mu? <a asp-action="Register" asp-controller="Home">Kayıt olun</a></p>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}