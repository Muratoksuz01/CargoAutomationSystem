@model UserInfoViewModel
@{
    ViewData["Title"] = "Settings";
}
<h2>Settings</h2>

<div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="@Model.ImageUrl" class="img-fluid rounded-start" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">@Model.Username</h5>
        <p class="card-text">@Model.Email</p>
        <p class="card-text">@Model.Address</p>
        <p class="card-text">@Model.Phone</p>
      </div>
    </div>
  </div>
</div>



<form method="post" asp-action="Setting" asp-controller="User">
    <input type="hidden" value="@Model.UserId">
    <div class="form-group">
        <label asp-for="Username">Username</label>
        <input asp-for="Username" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Phone">Phone</label>
        <input asp-for="Phone" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Address">Address</label>
        <input asp-for="Address" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl">Image URL</label>
        <input asp-for="ImageUrl" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>